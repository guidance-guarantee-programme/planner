<div class="page-header">
  <ol class="breadcrumb">
    <li><a href="<%= root_path %>">Appointment planner</a></li>
    <li class="active">Appointments</li>
  </ol>
  <h1>Appointments</h1>
</div>

<% if @appointments.page.empty? %>
  <div class="row">
    <div class="col-md-12">
      <p class="no-content t-notice">No appointments.</p>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-10">
      <%= paginate @appointments.entities, :pagination_class => "remove-top-margin" %>
    </div>
    <div class="col-md-2">
      <%= link_to(appointments_calendar_url, class: 'btn btn-default calendar-view-button') do %>
        <span class="glyphicon glyphicon-calendar"></span> Calendar view
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered">
        <thead>
          <tr class="table-header">
            <th>Date of appointment</th>
            <th>Time of appointment</th>
            <th>Customer name</th>
            <th>Guider</th>
            <th>Location</th>
            <th>Reference</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @appointments.page.each do |appointment| %>
            <tr class="t-appointment">
              <td>
                <%= appointment.proceeded_at.strftime('%A, %b %e') %>
              </td>
              <td>
                <%= appointment.proceeded_at.strftime('%H:%M') %>
              </td>
              <td>
                <%= appointment.name %>
              </td>
              <td>
                <%= appointment.guider_name %>
              </td>
              <td>
                <%= appointment.location_name %>
              </td>
              <td>
                <%= appointment.reference %>
              </td>
              <td>
                <%= appointment.status.titleize %>
              </td>
              <td>
                <%= link_to('Cancel / change', edit_appointment_path(appointment), class: 'btn btn-danger t-edit') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= paginate @appointments.entities %>
    </div>
  </div>
<% end %>
