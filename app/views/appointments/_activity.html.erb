<div class="activity-feed">
  <table class="activity-feed__table table <%= 'table-condensed' if preview %>">
    <tr class="well">
      <td>
        <div class="row">
          <div class="col-lg-12">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Add an action to keep others in the loop">
              <span class="input-group-btn">
                <button class="btn btn-default" type="submit">
                  <span class="glyphicon glyphicon-plus"></span>
                </button>
              </span>
            </div>
          </div>
        </div>
      </td>
    </tr>

    <% items.times do %>
      <tr>
        <td>
          <%
          type = ['contact', 'email', 'calendar'].sample
          %>

          <% if type =='calendar' %>
            <span class="glyphicon glyphicon-calendar"></span> <b><%= ['Mary', 'Peter', 'Carmel'].sample %></b> <%= ['created', 'rescheduled', 'cancelled'].sample %> the appointment <em class="badge"><%= rand(5..45) %> minutes ago</em>
          <% end %>

          <% if type == 'contact' %>
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> <b><%= ['Mary', 'Peter', 'Carmel', 'Mercedes'].sample %></b> <%= ['called', 'emailed', 'heard from'].sample %> the customer <%= ['', 'and left a voicemail', 'and has rearranged'].sample %> <em class="badge"><%= rand(5..45) %> minutes ago</em>
          <% end %>

          <% if type == 'email' %>
            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> The customer <b><%= ['received', 'opened'].sample %></b> the <%= ['confirmation', 'updated appointment'].sample %> email <em class="badge"><%= rand(5..45) %> minutes ago</em></b>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <% if preview %>
    <p>
      <a href="<%= url_for(appointments_activity_path) %>">
        <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span> All activity on this booking
      </a>
    </p>
  <% end %>
</div>
